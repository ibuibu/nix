{
  "env": {
    "ANTHROPIC_MODEL": "claude-opus-4-6"
  },
  "permissions": {
    "allow": [
      "Bash:gh pr diff",
      "Bash:gh pr view",
      "Bash:gh pr checks",
      "Bash:gh workflow view",
      "Bash:gh run view",
      "Bash:cargo clippy",
      "Bash:cargo check",
      "Bash:cargo build",
      "Bash:cargo test",
      "Bash:cargo nextest",
      "Bash:cargo run",
      "Bash:npx tsc --noemit",
      "Bash:npm run lint",
      "Read:*"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if grep -qi microsoft /proc/version 2>/dev/null; then powershell.exe '[System.Media.SystemSounds]::Asterisk.Play()'; elif [ \"$(uname)\" = \"Darwin\" ]; then afplay /System/Library/Sounds/Hero.aiff; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true
  }
}
