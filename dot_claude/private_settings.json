{
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Hero.aiff"
          },
          {
            "type": "command",
            "command": "osascript -e 'display notification \"タスクが完了しました\" with title \"GitHub Copilot CLI\"'"
          }
        ]
      }
    ]
  }
}
